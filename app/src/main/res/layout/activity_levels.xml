<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_margin="30dp"
    tools:context="com.questionqate.Activities.LevelsActivity">

    <Button
        android:id="@+id/level_one_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="OnLowLevelClicked"
        android:text="Low"
        android:textAllCaps="false"
        android:visibility="visible" />

    <Button
        android:id="@+id/level_two_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:onClick="OnMediumLevelClicked"
        android:text="Medium"
        android:textAllCaps="false"
        android:visibility="visible" />

    <Button
        android:id="@+id/level_three_btn"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:onClick="OnHighLevelClicked"
        android:text="High"
        android:textAllCaps="false"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/activity_level_no_questions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cup" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Congratulation you have completed all the levels"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/subjet_card"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_marginRight="4dp"
        android:background="#00112233"
   >

        <RelativeLayout
            android:id="@+id/card_subject_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:src="@drawable/loading1"
                android:layout_marginBottom="10dp"
                android:id="@+id/subject_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/subject_name_view"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_alignParentBottom="true"
                android:background="#8e6f7479"
                android:textAlignment="center"
                android:textColor="#1a355c"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
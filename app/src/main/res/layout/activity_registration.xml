<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/books_640"
    tools:context="com.questionqate.Activities.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fields_reg"
                android:drawableLeft="@drawable/user_reg"
                android:drawablePadding="8dp"
                android:hint="Username"
                android:padding="6dp"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4" />

            <EditText
                android:id="@+id/id_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fields_reg"
                android:drawableLeft="@drawable/id_card"
                android:drawablePadding="8dp"
                android:hint="College ID"
                android:padding="6dp"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4" />

            <EditText
                android:id="@+id/email_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fields_reg"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="6dp"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4" />

            <EditText
                android:id="@+id/pass_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fields_reg"
                android:drawableLeft="@drawable/password_sign"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:padding="6dp"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:maxHeight="20dp"
                    android:minHeight="20dp"
                    android:progress="0"
                    android:secondaryProgress="100" />
            </LinearLayout>

            <EditText
                android:id="@+id/retype_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fields_reg"
                android:drawableLeft="@drawable/password_sign"
                android:drawablePadding="8dp"
                android:hint="Retype Password"
                android:padding="6dp"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4" />

            <Button
                android:id="@+id/reg_btn"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fields_reg"
                android:text="Submit"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/books_640"
    android:layout_height="match_parent"
    tools:context="com.questionqate.Activities.RegistrationActivity">

    <ScrollView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="460dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/name_reg"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4"
                android:drawableLeft="@drawable/user_reg"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:drawablePadding="8dp"
                android:hint="Username"
                android:background="@drawable/fields_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/id_reg"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4"
                android:drawableLeft="@drawable/id_card"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:drawablePadding="8dp"
                android:hint="College ID"
                android:background="@drawable/fields_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:drawablePadding="8dp"
                android:hint="Email"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4"
                android:id="@+id/email_reg"
                android:drawableLeft="@drawable/email"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:background="@drawable/fields_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:drawablePadding="8dp"
                android:hint="Password"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4"
                android:id="@+id/pass_reg"
                android:drawableLeft="@drawable/password_sign"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:background="@drawable/fields_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:maxHeight="20dp"
                    android:minHeight="20dp"
                    android:progress="0"
                    android:secondaryProgress="100"/>
            </LinearLayout>
            <EditText
                android:id="@+id/retype_reg"
                android:drawablePadding="8dp"
                android:hint="Retype Password"
                android:textColor="#a8c2e4"
                android:textColorHint="#a8c2e4"
                android:drawableLeft="@drawable/password_sign"
                android:layout_marginBottom="8dp"
                android:padding="6dp"
                android:background="@drawable/fields_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/reg_btn"
            android:text="Submit"
            android:textSize="20sp"
            android:background="@drawable/fields_reg"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_width="250dp"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp" />

    </ScrollView>



</RelativeLayout>

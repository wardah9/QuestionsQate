<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.questionqate.Activities.SplashScreen">

    <RelativeLayout
        android:background="#7488a3"
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/let" />

        <com.eyalbira.loadingdots.LoadingDots
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            app:LoadingDots_auto_play="true"
            app:LoadingDots_dots_color="@android:color/holo_orange_dark"
            app:LoadingDots_dots_count="7"
            app:LoadingDots_dots_size="20dp"

            app:LoadingDots_dots_space="1dp"
            app:LoadingDots_jump_duration="200"

            app:LoadingDots_jump_height="50dp"
            app:LoadingDots_loop_duration="800"
            app:LoadingDots_loop_start_delay="100" />


    </RelativeLayout>
</RelativeLayout>
